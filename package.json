{
  "name": "express-react-pdl",
  "version": "0.1.0",
  "description": "my React.js boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/pdlipman/express-react-pdl.git"
  },
  "bugs": {
    "url": "https://github.com/pdlipman/express-react-pdl/issues"
  },
  "homepage": "https://github.com/pdlipman/express-react-pdl/wiki",
  "scripts": {
    "watch-js": "watchify -t [ babelify --presets [ react ] ] ./app/App.js -o ./dist/bundle.js",
    "build-js": "browserify -t [ babelify --presets [ react ] ] ./app/App.js -o ./dist/bundle.js",
    "build-css": "node-sass ./sass/main.scss ./dist/css/main.css",
    "watch-css": "node-sass -w ./sass/main.scss ./dist/css/main.css",
    "start": "node server",
    "test": "jest --coverage",
    "lint": "eslint app",
    "lintreport": "eslint . -f checkstyle -o ./dist/lint/lintreport.xml",
    "doc": "esdoc -c esdoc.json",
    "dist": "npm run build-css && npm run build-js && npm run doc && npm run test && npm run lint",
    "lr": "live-reload --port 35729 ./dist/",
    "watch": "npm run watch-css & npm run watch-js & npm run lr & npm start"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^15.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "esdoc": "^0.4.8",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "jest-cli": "15.1.1",
    "live-reload": "^1.1.0",
    "node-sass": "^3.9.3",
    "watchify": "^3.2.2"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "browserify": "^13.1.0",
    "ejs": "^2.5.1",
    "express": "^4.12.4",
    "flux": "^2.0.3",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-router": "^2.7.0"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "coverageDirectory": "./dist"
  }
}
