{
  "name": "express-react-pdl",
  "version": "0.1.0",
  "description": "my React.js boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/pdlipman/express-react-pdl.git"
  },
  "bugs": {
    "url": "https://github.com/pdlipman/express-react-pdl/issues"
  },
  "homepage": "https://github.com/pdlipman/express-react-pdl/wiki",
  "scripts": {
    "watch": "watchify -t [ babelify --presets [ react ] ] ./app/App.js -o ./dist/bundle.js",
    "build": "browserify -t [ babelify --presets [ react ] ] ./app/App.js -o ./dist/bundle.js",
    "start": "node server",
    "test": "jest --coverage",
    "lint": "eslint app",
    "lintreport": "eslint . -f checkstyle -o ./dist/lint/lintreport.xml",
    "doc": "esdoc -c esdoc.json",
    "dist": "npm run build && npm run doc"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^15.0.0",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "esdoc": "^0.4.8",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "jest-cli": "15.1.1",
    "watchify": "^3.2.2"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "ejs": "^2.5.1",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "classnames": "^2.1.2",
    "express": "^4.12.4",
    "flux": "^2.0.3",
    "object-assign": "^4.1.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-router": "^2.7.0",
    "superagent": "^2.2.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "coverageDirectory": "./dist"
  },
  "engines": {
    "node": "0.12.0"
  }
}
